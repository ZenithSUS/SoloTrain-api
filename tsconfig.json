{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "outDir": "./dist",
    "rootDir": "./",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmitOnError": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist", "tests", "**/*.spec.ts"],
  "ts-node": {
    "esm": true
  }
}
